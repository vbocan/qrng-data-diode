# QRNG Collector Environment Configuration
# Copy this file to .env and fill in your values

# QRNG Appliance URL
# URL of the QRNG appliance to fetch entropy from
APPLIANCE_URL=https://your-qrng-appliance.local/random

# Gateway Push URL
# URL of the QRNG Gateway push endpoint
PUSH_URL=https://your-gateway.example.com/push

# HMAC Secret Key (hex-encoded, 64 characters for 256-bit key)
# Generate with: openssl rand -hex 32
# MUST match the gateway's HMAC_SECRET_KEY
HMAC_SECRET_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Fetch Configuration
# Bytes to fetch per request (default: 1024)
FETCH_CHUNK_SIZE=1024

# Fetch interval in seconds (default: 5)
FETCH_INTERVAL_SECS=5

# Internal buffer size in bytes (default: 1048576 = 1MB)
BUFFER_SIZE=1048576

# Push Configuration
# Push interval in seconds (default: 10)
PUSH_INTERVAL_SECS=10

# Retry Configuration
# Maximum retry attempts (default: 5)
MAX_RETRIES=5

# Initial backoff in milliseconds (default: 100)
INITIAL_BACKOFF_MS=100

# Logging
# Log level: trace, debug, info, warn, error (default: info)
LOG_LEVEL=info
